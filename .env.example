# Apex Brain Configuration
# Copy this file to .env and fill in your values

# AI Model - change this string to swap providers instantly
# Examples: gpt-4o, gpt-4o-mini, claude-sonnet-4-20250514, gemini/gemini-2.0-flash
LITELLM_MODEL=gpt-4o

# API Keys (only need the one for your chosen model)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Embedding model for semantic memory search
EMBEDDING_MODEL=text-embedding-3-small

# Fact extraction model (cheaper model for background processing)
FACT_EXTRACTION_MODEL=gpt-4o-mini

# Home Assistant connection
# For local development: http://<YOUR_HA_IP>:8123
# Inside HA add-on: http://supervisor/core (automatic)
HA_URL=http://192.168.1.100:8123
HA_TOKEN=your_long_lived_access_token_here

# Database path
# For local development: ./apex.db
# Inside HA add-on: /data/apex.db (persistent volume)
DB_PATH=./apex.db

# Memory tuning
RECENT_TURNS=10
MAX_FACTS_IN_CONTEXT=20
